
<header>
  <h3 style="color: red">TinyApp&copy;</h3>
  <nav>
    <ul>
      <li><a href="/urls/new">Create</a></li>
      <li><a href="/urls">Your URLs</a></li>
    </ul>
  </nav>

<% if (!username) { %>
  <div class="logged-out">
  <form action="/login" method="POST">
    <label><strong>Login</strong>
      <input id="username" type="text" name="username" placeholder="username" style="width: 150px">
    </label>
    <input type="submit" value="Sign In">
  </form>
  </div>
<% } else { %>
  <div class="logged-in">
  <p>Hi, <%= username %>!</p>
  <form action="/logout" method="POST">
    <input type="submit" value="Logout">
  </form>
  </div>
<% } %>
</header>
